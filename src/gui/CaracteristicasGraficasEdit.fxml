<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="99.0" prefWidth="375.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.PlacaDeVideoCaracsController">
   <children>
      <Label text="Editar Características Gráficas">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </Label>
      <HBox prefHeight="33.0" prefWidth="375.0">
         <children>
            <TextField fx:id="txtDirectX" prefHeight="25.0" prefWidth="141.0" promptText="Direct X">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="txtOpenGL" prefHeight="25.0" prefWidth="122.0" promptText="OpenGL">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="txtOpenCL" prefHeight="25.0" prefWidth="112.0" promptText="OpenCL">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox prefHeight="36.0" prefWidth="375.0">
         <children>
            <TextField fx:id="txtVulkan" prefHeight="25.0" prefWidth="141.0" promptText="Vulkan">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="txtCudaCores" prefHeight="25.0" prefWidth="122.0" promptText="Cuda Cores">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="txtShaderModel" prefHeight="25.0" prefWidth="112.0" promptText="Shader Model">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
         <buttons>
            <Button fx:id="btSalvarCaracGrafica" mnemonicParsing="false" onAction="#onBtSalvarCaracGraficaAction" text="Salvar" />
            <Button fx:id="btCancelarCaracGrafica" mnemonicParsing="false" onAction="#onBtCancelarCaracGraficaAction" text="Cancelar" />
         </buttons>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </ButtonBar>
   </children>
</VBox>
